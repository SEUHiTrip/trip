<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" >

<ImageView
    android:id="@+id/application_logo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scaleType="fitXY"
    android:src="@drawable/hitrip"/>

<RelativeLayout
    android:id="@+id/login_relativelayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="invisible"  >

    <ImageView
        android:id="@+id/login_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/loginbackground"/>

    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:id="@+id/login_account_text"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:editable="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="17dp"
        android:layout_marginBottom="85dp"
        android:text="White"
        />

    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:id="@+id/login_password_text"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:editable="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="18dp"
        android:layout_marginBottom="30dp"
        android:text="123" />

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/login_login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="登陆"
        android:layout_alignTop="@+id/login_password_text"
        android:layout_alignLeft="@+id/login_clear_button"
        android:layout_alignStart="@+id/login_clear_button" />

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/login_clear_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="清空"
        android:layout_alignBottom="@+id/login_account_text"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="23dp" />

    </RelativeLayout>



</RelativeLayout>